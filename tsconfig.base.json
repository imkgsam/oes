{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "incremental": true,
    "useDefineForClassFields": false, 
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
  },
}
